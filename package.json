{
  "name": "ecommerce",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "dotenv -- node ./server.js",
    "fix": "biome check . --apply",
    "lint": "biome check .",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "typecheck": "tsc",
    "postinstall": "mkdir -p sessions",
    "seed": "cross-env NODE_ENV=development tsx app/database/seeds.ts",
    "resetdb": "./app/database/resetdb.sh",
    "restorebackup": "./app/database/restorebackup.sh",
    "resetandseed": "npm run db:reset && npm run seed",
    "importwp": "npm run resetdb && ./app/database/wordpress-data/import.sh",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "email-worker": "tsx watch app/workers/emailProcessor.ts",
    "email-worker:prod": "tsx app/workers/emailProcessor.ts"
  },
  "dependencies": {
    "@conform-to/react": "^1.2.2",
    "@conform-to/zod": "^1.2.2",
    "@faker-js/faker": "^9.2.0",
    "@heroicons/react": "^2.1.5",
    "@paypal/react-paypal-js": "^8.7.0",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-menubar": "^1.1.2",
    "@radix-ui/react-navigation-menu": "^1.2.1",
    "@radix-ui/react-radio-group": "^1.2.1",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.2",
    "@remix-run/express": "^2.13.1",
    "@remix-run/node": "^2.13.1",
    "@remix-run/react": "^2.13.1",
    "@remix-run/serve": "^2.13.1",
    "argon2": "^0.41.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "embla-carousel-react": "^8.3.0",
    "express": "^4.19.2",
    "ioredis": "^5.4.1",
    "isbot": "5.1.0",
    "lucide-react": "^0.263.1",
    "morgan": "1.10.0",
    "mysql2": "^3.12.0",
    "nodemailer": "^6.9.16",
    "postgres": "^3.4.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-dropzone": "^14.2.10",
    "recharts": "^2.13.0",
    "remix-utils": "^7.7.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "1.0.7",
    "tsx": "^4.19.2",
    "uuid": "^11.0.2",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
