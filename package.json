    "@types/uuid": "^10.0.0",
    "autoprefixer": "10.4.17",
    "dotenv-cli": "7.3.0",
    "postcss": "8.4.35",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3",
    "vite": "5.1.3",
    "vite-env-only": "2.2.0",
    "vite-tsconfig-paths": "4.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
